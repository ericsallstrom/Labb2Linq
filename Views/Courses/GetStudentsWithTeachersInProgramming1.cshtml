@model List<Labb2Linq.ViewModels.GetStudentsWithTeachersInProgramming1VM>

@{
    ViewData["Title"] = "Retrieve students with teachers in Programming 1";
}


<h2>Students with respective teachers</h2>
<hr />

@if (Model.Count != 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Student</th>
                <th>Teacher(s)</th>
                <th>Course</th>
                <th>Class</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var courseStudent in Model)
            {
                <tr>
                    <td>@courseStudent.StudentName</td>                    
                    <td>
                        @foreach (var teacher in courseStudent.Teachers)
                        {
                            @teacher.TeacherName
                            <br />
                        }
                    </td>
                    <td>@courseStudent.CourseName</td>
                    <td>@courseStudent.ClassName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3">
        <p>No students and teachers found.</p>
    </div>
}

<a asp-action="Index" class="btn btn-outline-primary mt-2">Back</a>